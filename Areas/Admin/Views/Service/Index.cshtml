@using MaximMVC.Models;
@model List<Service>

    <div class="container">
        <h3>Services</h3>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Service">Create</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Icon</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Icon</td>
            <td>
                <a class="btn btn-secondary" asp-action="Update" asp-controller="Service" asp-route-id="@item.Id">Update</a>
                <a class="btn btn-danger" asp-action="Delete" asp-controller="Service" asp-route-id="@item.Id">Delete</a>
            </td>
            </tr>
        }

    </tbody>
</table>
</div>